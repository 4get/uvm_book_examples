<?xml version="1.0"?>
<!-- UART Controller Register Definition File -->
<spirit:component
 xmlns:spirit="http://www.spiritconsortium.org/XMLSchema/SPIRIT/1.4"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xmlns:vendorExtensions="$OUM_RGM_HOME/builder/ipxact/schema"
 xsi:schemaLocation="http://www.spiritconsortium.org/XMLSchema/SPIRIT/1.4
                     http://www.spiritconsortium.org/XMLSchema/SPIRIT/1.4/index.xsd
                     $UVM_RGM_HOME/builder/ipxact/schema
                     $UVM_RGM_HOME/builder/ipxact/schema/vendorExtensions.xsd">
<!-- REQUIRED HEADER INFO - DOES NOT END UP IN ANY GENERAGED SV FILES -->
	<spirit:vendor>Cadence_Design_Systems</spirit:vendor>
	<spirit:library>uart_ctrl_lib</spirit:library>
	<spirit:name>uart_ctrl_reg_db</spirit:name>
	<spirit:version>1.0</spirit:version>
        <!-- START OF ADDRESS MAP DEFINITION -->
	<spirit:memoryMaps>
		<spirit:memoryMap>
			<spirit:name>uart_ctrl_addr_map</spirit:name>
			<spirit:addressBlock>
                                <!-- UART Controller Register File -->
				<spirit:name>uart_ctrl_rf</spirit:name>
				<spirit:baseAddress>0x00</spirit:baseAddress>
				<spirit:range>0xFFFF</spirit:range>
				<spirit:width>8</spirit:width>
				<spirit:register>
                                        <!-- INTERRUPT ENABLE REGISTER -->
					<spirit:name>ua_ier</spirit:name>
					<spirit:addressOffset>0x8</spirit:addressOffset>
					<spirit:size>8</spirit:size>
					<spirit:access>read-write</spirit:access>
					<spirit:reset>
						<spirit:value>0x00</spirit:value>
						<spirit:mask>0x0f</spirit:mask>
					</spirit:reset>
					<spirit:field>
						<spirit:name>rx_data</spirit:name>
						<spirit:bitOffset>0</spirit:bitOffset>
						<spirit:bitWidth>1</spirit:bitWidth>
						<spirit:vendorExtensions>
							<vendorExtensions:collect_coverage>cov_all</vendorExtensions:collect_coverage>
						</spirit:vendorExtensions>
					</spirit:field>
					<spirit:field>
						<spirit:name>tx_data</spirit:name>
						<spirit:bitOffset>1</spirit:bitOffset>
						<spirit:bitWidth>1</spirit:bitWidth>
						<spirit:vendorExtensions>
							<vendorExtensions:collect_coverage>cov_all</vendorExtensions:collect_coverage>
						</spirit:vendorExtensions>
					</spirit:field>
					<spirit:field>
						<spirit:name>rx_line_sts</spirit:name>
						<spirit:bitOffset>2</spirit:bitOffset>
						<spirit:bitWidth>1</spirit:bitWidth>
						<spirit:vendorExtensions>
							<vendorExtensions:collect_coverage>cov_all</vendorExtensions:collect_coverage>
						</spirit:vendorExtensions>
					</spirit:field>
					<spirit:field>
						<spirit:name>mdm_sts</spirit:name>
						<spirit:bitOffset>3</spirit:bitOffset>
						<spirit:bitWidth>1</spirit:bitWidth>
						<spirit:vendorExtensions>
							<vendorExtensions:collect_coverage>cov_all</vendorExtensions:collect_coverage>
						</spirit:vendorExtensions>
					</spirit:field>
					<spirit:field>
						<spirit:name>rsv</spirit:name>
						<spirit:bitOffset>4</spirit:bitOffset>
						<spirit:bitWidth>4</spirit:bitWidth>
						<spirit:vendorExtensions>
							<vendorExtensions:collect_coverage>cov_none</vendorExtensions:collect_coverage>
							<vendorExtensions:is_rsv>true</vendorExtensions:is_rsv>
						</spirit:vendorExtensions>
					</spirit:field>
					<spirit:vendorExtensions>
						<vendorExtensions:type>ua_ier_c</vendorExtensions:type>
						<vendorExtensions:compare_mask>0x0f</vendorExtensions:compare_mask>
						<vendorExtensions:hdl_path>ua_ier_reg</vendorExtensions:hdl_path>
					</spirit:vendorExtensions>
				</spirit:register>
				<spirit:register>
                                        <!-- INTERRUPT ID REGISTER -->
					<spirit:name>ua_int_id</spirit:name>
					<spirit:addressOffset>0x2</spirit:addressOffset>
					<spirit:size>8</spirit:size>
					<spirit:access>read-only</spirit:access>
					<spirit:reset>
						<spirit:value>0xC1</spirit:value>
						<spirit:mask>0x0f</spirit:mask>
					</spirit:reset>
					<spirit:field>
						<spirit:name>priority_bit</spirit:name>
						<spirit:bitOffset>0</spirit:bitOffset>
						<spirit:bitWidth>1</spirit:bitWidth>
						<spirit:vendorExtensions>
							<vendorExtensions:collect_coverage>cov_compare_and_update</vendorExtensions:collect_coverage>
						</spirit:vendorExtensions>
					</spirit:field>
					<spirit:field>
						<spirit:name>bit1</spirit:name>
						<spirit:bitOffset>1</spirit:bitOffset>
						<spirit:bitWidth>1</spirit:bitWidth>
						<spirit:vendorExtensions>
							<vendorExtensions:collect_coverage>cov_compare_and_update</vendorExtensions:collect_coverage>
						</spirit:vendorExtensions>
					</spirit:field>
					<spirit:field>
						<spirit:name>bit2</spirit:name>
						<spirit:bitOffset>2</spirit:bitOffset>
						<spirit:bitWidth>1</spirit:bitWidth>
						<spirit:vendorExtensions>
							<vendorExtensions:collect_coverage>cov_compare_and_update</vendorExtensions:collect_coverage>
						</spirit:vendorExtensions>
					</spirit:field>
					<spirit:field>
						<spirit:name>bit3</spirit:name>
						<spirit:bitOffset>3</spirit:bitOffset>
						<spirit:bitWidth>1</spirit:bitWidth>
						<spirit:vendorExtensions>
							<vendorExtensions:collect_coverage>cov_compare_and_update</vendorExtensions:collect_coverage>
						</spirit:vendorExtensions>
					</spirit:field>
					<spirit:field>
						<spirit:name>rsv</spirit:name>
						<spirit:bitOffset>4</spirit:bitOffset>
						<spirit:bitWidth>4</spirit:bitWidth>
						<spirit:vendorExtensions>
							<vendorExtensions:is_rsv>true</vendorExtensions:is_rsv>
							<vendorExtensions:collect_coverage>cov_none</vendorExtensions:collect_coverage>
						</spirit:vendorExtensions>
					</spirit:field>
					<spirit:vendorExtensions>
						<vendorExtensions:type>ua_int_id_c</vendorExtensions:type>
						<vendorExtensions:compare_mask>0x0f</vendorExtensions:compare_mask>
						<vendorExtensions:hdl_path>ua_int_id_reg</vendorExtensions:hdl_path>
					</spirit:vendorExtensions>
				</spirit:register>
				<spirit:register>
                                        <!-- FIFO CONTROL REGISTER -->
					<spirit:name>ua_fifo_ctrl</spirit:name>
					<spirit:addressOffset>0x2</spirit:addressOffset>
					<spirit:size>8</spirit:size>
					<spirit:access>write-only</spirit:access>
					<spirit:reset>
						<spirit:value>0xC0</spirit:value>
						<spirit:mask>0xC6</spirit:mask>
					</spirit:reset>
					<spirit:field>
						<spirit:name>rx_clear</spirit:name>
						<spirit:bitOffset>1</spirit:bitOffset>
						<spirit:bitWidth>1</spirit:bitWidth>
						<spirit:vendorExtensions>
							<vendorExtensions:collect_coverage>cov_update</vendorExtensions:collect_coverage>
						</spirit:vendorExtensions>
					</spirit:field>
					<spirit:field>
						<spirit:name>tx_clear</spirit:name>
						<spirit:bitOffset>2</spirit:bitOffset>
						<spirit:bitWidth>1</spirit:bitWidth>
						<spirit:vendorExtensions>
							<vendorExtensions:collect_coverage>cov_update</vendorExtensions:collect_coverage>
						</spirit:vendorExtensions>
					</spirit:field>
					<spirit:field>
						<spirit:name>rsv</spirit:name>
						<spirit:bitOffset>3</spirit:bitOffset>
						<spirit:bitWidth>3</spirit:bitWidth>
						<spirit:vendorExtensions>
							<vendorExtensions:is_rsv>true</vendorExtensions:is_rsv>
							<vendorExtensions:collect_coverage>cov_none</vendorExtensions:collect_coverage>
						</spirit:vendorExtensions>
					</spirit:field>
					<spirit:field>
						<spirit:name>rx_fifo_int_trig_level</spirit:name>
						<spirit:bitOffset>6</spirit:bitOffset>
						<spirit:bitWidth>2</spirit:bitWidth>
						<spirit:vendorExtensions>
							<vendorExtensions:collect_coverage>cov_update</vendorExtensions:collect_coverage>
						</spirit:vendorExtensions>
					</spirit:field>
					<spirit:vendorExtensions>
						<vendorExtensions:type>ua_fifo_ctrl_c</vendorExtensions:type>
						<vendorExtensions:compare_mask>0xC6</vendorExtensions:compare_mask>
						<vendorExtensions:hdl_path>ua_fifo_ctrl_reg</vendorExtensions:hdl_path>
					</spirit:vendorExtensions>
				</spirit:register>
				<spirit:register>
                                        <!-- LCONTROL REGISTER -->
					<spirit:name>ua_lcr</spirit:name>
					<spirit:addressOffset>0x3</spirit:addressOffset>
					<spirit:size>8</spirit:size>
					<spirit:access>read-write</spirit:access>
					<spirit:reset>
						<spirit:value>0x03</spirit:value>
						<spirit:mask>0xff</spirit:mask>
					</spirit:reset>
					<spirit:field>
						<spirit:name>char_lngth</spirit:name>
						<spirit:bitOffset>0</spirit:bitOffset>
						<spirit:bitWidth>2</spirit:bitWidth>
						<spirit:vendorExtensions>
							<vendorExtensions:collect_coverage>cov_all</vendorExtensions:collect_coverage>
						</spirit:vendorExtensions>
					</spirit:field>
					<spirit:field>
						<spirit:name>num_stop_bits</spirit:name>
						<spirit:bitOffset>2</spirit:bitOffset>
						<spirit:bitWidth>1</spirit:bitWidth>
						<spirit:vendorExtensions>
							<vendorExtensions:collect_coverage>cov_all</vendorExtensions:collect_coverage>
						</spirit:vendorExtensions>
					</spirit:field>
					<spirit:field>
						<spirit:name>p_en</spirit:name>
						<spirit:bitOffset>3</spirit:bitOffset>
						<spirit:bitWidth>1</spirit:bitWidth>
						<spirit:vendorExtensions>
							<vendorExtensions:collect_coverage>cov_all</vendorExtensions:collect_coverage>
						</spirit:vendorExtensions>
					</spirit:field>
					<spirit:field>
						<spirit:name>parity_even</spirit:name>
						<spirit:bitOffset>4</spirit:bitOffset>
						<spirit:bitWidth>1</spirit:bitWidth>
						<spirit:vendorExtensions>
							<vendorExtensions:collect_coverage>cov_all</vendorExtensions:collect_coverage>
						</spirit:vendorExtensions>
					</spirit:field>
					<spirit:field>
						<spirit:name>parity_sticky</spirit:name>
						<spirit:bitOffset>5</spirit:bitOffset>
						<spirit:bitWidth>1</spirit:bitWidth>
						<spirit:vendorExtensions>
							<vendorExtensions:collect_coverage>cov_all</vendorExtensions:collect_coverage>
						</spirit:vendorExtensions>
					</spirit:field>
					<spirit:field>
						<spirit:name>break_ctrl</spirit:name>
						<spirit:bitOffset>6</spirit:bitOffset>
						<spirit:bitWidth>1</spirit:bitWidth>
						<spirit:vendorExtensions>
							<vendorExtensions:collect_coverage>cov_all</vendorExtensions:collect_coverage>
						</spirit:vendorExtensions>
					</spirit:field>
					<spirit:field>
						<spirit:name>div_latch_access</spirit:name>
						<spirit:bitOffset>7</spirit:bitOffset>
						<spirit:bitWidth>1</spirit:bitWidth>
						<spirit:vendorExtensions>
							<vendorExtensions:collect_coverage>cov_all</vendorExtensions:collect_coverage>
						</spirit:vendorExtensions>
					</spirit:field>
					<spirit:vendorExtensions>
						<vendorExtensions:type>ua_lcr_c</vendorExtensions:type>
						<vendorExtensions:compare_mask>0xff</vendorExtensions:compare_mask>
						<vendorExtensions:hdl_path>ua_lcr_reg</vendorExtensions:hdl_path>
						<vendorExtensions:constraint>c_char_lngth { char_lngth.value != 2'b00; }</vendorExtensions:constraint>
						<vendorExtensions:constraint>c_break_ctrl { break_ctrl.value == 1'b0; }</vendorExtensions:constraint>
					</spirit:vendorExtensions>
				</spirit:register>
				<spirit:register>
                                        <!-- DIV LATCH 0 REGISTER -->
					<spirit:name>ua_div_latch0</spirit:name>
					<spirit:addressOffset>0x0</spirit:addressOffset>
					<spirit:size>8</spirit:size>
					<spirit:access>read-write</spirit:access>
					<spirit:reset>
						<spirit:value>0x00</spirit:value>
						<spirit:mask>0xff</spirit:mask>
					</spirit:reset>
					<spirit:field>
						<spirit:name>div_val</spirit:name>
						<spirit:bitOffset>0</spirit:bitOffset>
						<spirit:bitWidth>8</spirit:bitWidth>
						<spirit:vendorExtensions>
							<vendorExtensions:collect_coverage>cov_all</vendorExtensions:collect_coverage>
						</spirit:vendorExtensions>
					</spirit:field>
					<spirit:vendorExtensions>
						<vendorExtensions:type>ua_div_latch0_c</vendorExtensions:type>
						<vendorExtensions:compare_mask>0xff</vendorExtensions:compare_mask>
						<vendorExtensions:hdl_path>ua_div_latch0_reg</vendorExtensions:hdl_path>
						<vendorExtensions:constraint>c_div_val { div_val.value == 1; }</vendorExtensions:constraint>
					</spirit:vendorExtensions>
				</spirit:register>
				<spirit:register>
                                        <!-- DIV LATCH 1 REGISTER -->
					<spirit:name>ua_div_latch1</spirit:name>
					<spirit:addressOffset>0x1</spirit:addressOffset>
					<spirit:size>8</spirit:size>
					<spirit:access>read-write</spirit:access>
					<spirit:reset>
						<spirit:value>0x00</spirit:value>
						<spirit:mask>0xff</spirit:mask>
					</spirit:reset>
					<spirit:field>
						<spirit:name>div_val</spirit:name>
						<spirit:bitOffset>0</spirit:bitOffset>
						<spirit:bitWidth>8</spirit:bitWidth>
						<spirit:vendorExtensions>
							<vendorExtensions:collect_coverage>cov_all</vendorExtensions:collect_coverage>
						</spirit:vendorExtensions>
					</spirit:field>
					<spirit:vendorExtensions>
						<vendorExtensions:type>ua_div_latch1_c</vendorExtensions:type>
						<vendorExtensions:compare_mask>0xff</vendorExtensions:compare_mask>
						<vendorExtensions:hdl_path>ua_div_latch1_reg</vendorExtensions:hdl_path>
						<vendorExtensions:constraint>c_div_val { div_val.value == 0; }</vendorExtensions:constraint>
					</spirit:vendorExtensions>
				</spirit:register>
				<spirit:vendorExtensions>
					<vendorExtensions:type>uart_ctrl_rf_c</vendorExtensions:type>
					<vendorExtensions:hdl_path>rf1</vendorExtensions:hdl_path>
				</spirit:vendorExtensions>
			</spirit:addressBlock>
		</spirit:memoryMap>
	</spirit:memoryMaps>
	<spirit:vendorExtensions>
		<vendorExtensions:type>uart_ctrl_addr_map_c</vendorExtensions:type>		
		<vendorExtensions:hdl_path>addr_map</vendorExtensions:hdl_path>
	</spirit:vendorExtensions>
</spirit:component>
